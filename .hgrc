[ui]
username = Yoichi FUJIMOTO
ignore = ~/.hgignore
editor = /usr/bin/vi

[defaults]
add = --encoding=utf-8
clone = --encoding=utf-8
commit = --encoding=utf-8
init = --encoding=utf-8
pull = --encoding=utf-8
push = --encoding=utf-8
remove = --encoding=utf-8
revert = --encoding=utf-8
update = --encoding=utf-8

[extensions]
churn =
color =
extdiff =
hgext.fetch =
hgext.graphlog =
hgext.mq =
rebase =
transplant =

[extdiff]
cmd.chdiff =
opts.chdiff = --wait

# [merge-tools]
# changes.executable = chdiff
# changes.args = --wait $local $other

[trusted]
users = wozozo
groups = wozozo

[diff]
# git = True

[alias]
dlog = log --style=$HOME/.profiles/zsh/mercurial/templates/map-cmdline.dlog
nlog = log --style=$HOME/.profiles/zsh/mercurial/templates/map-cmdline.nlog
sglog = glog --style=$HOME/.profiles/zsh/mercurial/templates/map-cmdline.sglog
slog = log --style=$HOME/.profiles/zsh/mercurial/templates/map-cmdline.slog
