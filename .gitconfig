[user]
	name = Yoichi Fujimoto
	email = wozozo@gmail.com
[alias]
	ci = commit
	co = checkout
	st = status
	br = branch
	sm = submodule
	gr = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
	d = diff -w
	gg = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
	diffprev = diff HEAD^ HEAD -b --
	ranking = shortlog -s -n --no-merges
	edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; gvim `f`"
	add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
	switch = !legit switch \"$@\"
	branches = !legit branches
	sprout = !legit sprout \"$@\"
	unpublish = !legit unpublish \"$@\"
	harvest = !legit harvest \"$@\"
	sync = !legit sync \"$@\"
	publish = !legit publish \"$@\"
	graft = !legit graft \"$@\"
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	grep = auto
[core]
	excludesfile = $HOME/.gitignore
[i18n]
	commitEncoding = UTF-8
	logOutputEncoding = UTF-8
[github]
	user = wozozo
[mergetool]
  keepBackup = true

# tig Configurations
# See man tigrc(5).
[tig]
  #line-graphics = ascii
  tab-size = 4
[tig "bind"]
  # Disable default G mapping to git gc.
  generic = G none
  # Keybindings like vim.
  generic = g move-first-line
  generic = G move-last-line
  generic = ^b move-page-up
  generic = ^f move-page-down
[tig "color"]
  cursor = default black
  date = white default
  title-focus = white black
  title-blur = black white
